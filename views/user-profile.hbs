<div class="row  justify-content-center bg-warning ">
  <h2 class=" p-0 m-0 text-center text-dark font-weight-bolder ">HỒ SƠ CỦA BẠN</h2>

</div>
<div class="container  bg-light p-5 ">
  <form class="p-5" action="/ChangeProfile" method="post">

    <div class="row mt-3 mb-3 justify-content-center">
      <label class="col-lg-6 col-md-6 col-sm-6 text-left ">Tên Đăng Nhập:</label>
      <div id="id" class="col-lg-6 col-md-6 col-sm-6 text-center font-weight-bolder">{{user.id}}</div>
    </div>

    <div class="row mt-3 mb-3 justify-content-center">
      <label class="col-lg-6 col-md-6 col-sm-6 text-left " for="username">Họ và Tên:</label>
      <input type="text" class="col-6" name="User" id="username" value="{{user.name}}" required disabled>
    </div>

    <div class="row mt-3 mb-3 justify-content-center">
      <label class="col-lg-6 col-md-6 col-sm-6 text-left " for="age">Tuổi:</label>
      <input type="text" class="col-6" name="User" id="age" value="{{user.age}}" required disabled>
    </div>

    <div class="row mt-3 mb-3 justify-content-center">
      <div class="col-lg-6 col-md-6 col-sm-6 text-left ">Giới Tính:</div>

      <div class="col-6">
        <label for="Nam" class="">NAM</label> <input type="radio" name="User" id="Male" value="Nam" disabled>
        <label for="Nu" class="pl-5">NỮ</label> <input type="radio" name="User" id="Female" value="Nu" disabled>
      </div>
    </div>

    <div class="row mt-3 mb-3 justify-content-center">
      <label class="col-lg-6 col-md-6 col-sm-6 text-left " for="Adress">Địa chỉ:</label>
      <input type="text" class="col-6" name="User" id="Adress" value="{{user.address}}" required disabled>
    </div>

    <div class="row mt-3 mb-3 justify-content-center">
      <label class="col-lg-6 col-md-6 col-sm-6 text-left " for="phone">Số Điện Thoại:</label>
      <input type="text" class="col-6" name="User" id="phone" value="{{user.phone}}" required disabled>
    </div>

    <div class="row mt-3 mb-3 justify-content-center">
      <label class="col-lg-6 col-md-6 col-sm-6 text-left " for="mail">Email</label>
      <input type="text" class="col-6" name="User" id="mail" value="{{user.email}}" required disabled>
    </div>

    <div class="row mt-5  justify-content-center">

      <input type="submit" class=" d-none btn btn-primary bg-primary" value="HOÀN TẤT" disabled>
    </div>

  </form>
  <div class="text-center">
    <button class="btn btn-primary bg-dark " onclick="OK()">THAY ĐỔI THÔNG TIN</button>
  </div>
  <script>
    var male = document.getElementById('Male')
    var female = document.getElementById('Female')
    if ('{{user.gender}}' == 'Male'){
      male.checked = true
    }
    else{
      female.checked = true
    }
    function OK() {
      var Temp = document.getElementsByTagName('input');

      for (let i = 0; i < Temp.length; i++) {
        Temp[i].disabled = false
      }
      Temp[Temp.length - 1].classList.remove('d-none')
      //document.getElementsByTagName('button').classList.add('d-none')
    }
  </script>
</div>